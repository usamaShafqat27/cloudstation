<nav class="navbar navbar-expand-lg navbar-light bg-light nv-custom">
  <div class="container-fluid">
    <a class="navbar-brand" href="#" style="color:white" >CloudStation</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <i 
          class="bi bi-person-circle h6 profile-icon" 
          style="align-self: center; margin:0.5rem; font-size:1.5rem; color:white" 
          data-bs-toggle="modal" 
          data-bs-target="#exampleModal"
         ></i>
        <%= link_to '', '/logout', method: :delete, class: 'nav-link bi bi-box-arrow-right ', style: 'font-size:1.5rem; color:white'  %>
      </ul>
    </div>
  </div>
</nav>

<div id="user-data" data-user="<%= @current_user.to_json(except: 'password_digest') %>"></div>

<div class="row">
  <div class="card col-sm-3 py-3" style="height: 90vh; border: none; border-radius: 0; background-color: #0D1219">
    <h1 style="color:white" >Chats</h1>

    <%= render 'form', channel: @channel %>

    <ul id="channel-list" class="list-group channels">
      <% @channels.each do |channel| %>
        <%= render 'channel_item', channel: channel %>
      <% end %>
    </ul>
  </div>
  <div class="col-sm-9 pt-3" id="channel">
    <%= render 'channel', channel: @channel, messages: @messages, message: @message %>
  </div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">User Profile</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <label class="user-profile-label" >
          Username:
          <%= @current_user.username %>
        </label>
        <br>
        <label class="user-profile-label" >
          First Name:
          <%= @current_user.firstname %>
        </label>
        <br>
        <label class="user-profile-label" >
          Last Name:
          <%= @current_user.lastname %>
        </label>
        <br>
        <label class="user-profile-label" >
          City:
          <%= @current_user.city %>
        </label>
        <br>
        <label class="user-profile-label" >
          Country:
          <%= @current_user.country %>
        </label>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



</div>
